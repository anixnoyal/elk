EMAIL1=""
EMAIL2=""
SUPPORT_EMAIL="supportgroup@example.com"

# Combine both email variables with a comma in between
COMBINED="$EMAIL1,$EMAIL2"

# Remove any leading or trailing commas, replace multiple commas with a single comma, 
# and remove spaces (in case there are any)
CLEANED=$(echo "$COMBINED" | sed 's/^,//' | sed 's/,$//' | sed 's/,,/,/g' | sed 's/ //g')

# If CLEANED is empty, set it to the SUPPORT_EMAIL
if [ -z "$CLEANED" ]; then
    CLEANED="$SUPPORT_EMAIL"
fi

echo "$CLEANED"
